---
import { Image } from "astro:assets";
import about2 from "../assets/about2.jpg";
import Tag from "./Tag.astro";
---

<section class="container">
  <div class="del1">
    <div>
      <Tag style="primary">OUR VISION</Tag>
      <h2>Turn your ideas into reality.</h2>
      <p>Capitalize on low hanging fruit to identify a ballpark value added activity beta test. Override the digital divide with additional from DevOps.</p>
    </div>
    <ul>
      <li>Bring to the table win-win survival strategies to ensure proactive domination. At the end of the day.</li>
      <li>Bring to the table win-win survival strategies to ensure proactive domination. At the end of the day.</li>
    </ul>
  </div>
  <div class="del2">
    <figure class="figure-version3">
      <Image alt="" src={about2} />
    </figure>
  </div>
</section>

<style>
  @layer components {
    .container {
      grid-column: full;
      display: grid;
      grid-template-columns: var(--layout-grid2);
      grid-template-rows: var(--layout-rows2);
      gap: 2rem;
      color: var(--color-primary3);
      padding: 5rem 0;
      @media (width < 600px) {
        display: block;
        padding: 1rem 0;
      }

      .del1 {
        grid-column: 2 / 3;
        grid-row: 1 / 3;

        div {
          display: flex;
          flex-direction: column;
        }

        ul {
          display: grid;
          gap: 1rem;
          margin-top: 1.5rem;
          li {
            display: grid;
            grid-template-columns: auto 1fr;
            align-items: center;
            gap: 1rem;
            font-size: 1rem;
            color: #595566;
            max-width: 65ch;
            &:before {
              content: "";
              width: 1.6rem;
              aspect-ratio: 1;
              background: var(--checkmark-icon) 50% 50% / contain no-repeat;
            }
          }
        }
      }
      .del2 {
        grid-column: 3;
        grid-row: 1 / 3;
        display: grid;
        grid-template-columns: subgrid;
      }
    }

    [data-icon="balance"] {
      width: 24px;
    }
  }
</style>
