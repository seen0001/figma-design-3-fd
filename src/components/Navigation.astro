---
import Popover from "../components/Popover.astro";
---

<header>
  <div class="logo">
    <a href="/"> AskExperts </a>
  </div>
  <nav>
    <ul class="menu">
      <hr />
      <li><a href="/">Home</a></li>
      <hr />
      <li><a href="/casestudy">Case Study</a></li>
      <hr />
      <li><a href="/team">Team</a></li>
      <hr />
      <li><a href="/about">About</a></li>
      <hr />
    </ul>

    <div class="burger">
      <div class="line"></div>
      <div class="line"></div>
      <div class="line"></div>
    </div>
  </nav>

  <Popover />
</header>

<style>
  @layer components {
    header {
      width: 100%;
      height: 100%;
      padding: 38px;
      background: var(--color-navigation);

      backdrop-filter: blur(21px);
      display: inline-flex;
      justify-content: space-evenly;
      align-items: center;

      /* position: absolute; */
      z-index: 1;
    }
    .logo {
      a {
        font-family: "Cabin", sans-serif;
        font-size: 1.875rem;
        font-weight: var(--font-weight-600);
        color: var(--color-secondary2);
      }
    }

    .menu {
      justify-content: center;
      align-items: center;
      gap: 30px;
      display: inline-flex;
      justify-content: flex-start;
      list-style: none;
      flex-wrap: nowrap;
    }

    .menu li {
      margin-right: 20px;
    }

    .menu li:last-child {
      margin-right: 0;
    }

    .menu a {
      display: block;
      padding: 10px;
      color: var(--color-secondary2);

      text-decoration: none;
      transition: color 0.3s;
      text-align: end;
      font-weight: normal;
    }

    .menu a:hover {
      color: var(--color-primary1);
    }
    hr {
      display: none;
    }
    .burger {
      width: 30px;
      height: 20px;
      cursor: pointer;
    }

    .burger .line {
      width: 100%;
      height: 2px;
      background-color: var(--color_white);
      margin-bottom: 5px;
      transition: 0.2s linear;
    }
    .burger {
      display: none;
    }
    /* __________________________ Tablet delen __________________________ */
    /* Reglen gælder til og med 1024px */
    @media screen and (max-width: 1024px) {
      header {
        padding-inline: 36px;
        text-align: start;
      }
      .menu {
        display: none;
        text-align: start;
      }
      .burger {
        display: block;
        text-align: start;
        z-index: 1;
      }

      .burger.active .line:nth-child(1) {
        transform: rotate(45deg) translate(5px, 5px);
        transition: 0.2s linear;
      }

      .burger.active .line:nth-child(2) {
        opacity: 0;
        transition: 0.15s linear;
      }

      .burger.active .line:nth-child(3) {
        transform: rotate(-45deg) translate(5px, -5px);
        transition: 0.2s linear;
      }

      nav.active .menu {
        display: block;
        background: var(--color-navigation);
        position: absolute;
        top: 0px;
        left: 0;
        width: 100%;
        z-index: 1;
        text-align: start;
        padding-top: 100px;
      }

      nav.active .menu li {
        margin: 10px 20px;
        text-align: start;
      }

      nav.active .menu a {
        /* font-size: var(--font_size_large); */
        text-align: start;
      }
      hr {
        display: block;
        border-image: var(--color-secondary2) 1;
      }
      .logo img {
        width: 55px;
        height: auto;
      }
      li:last-child img {
        max-width: 45px;
        height: auto;
      }
    }

    /* __________________________ Mobil delen __________________________ */
    /* Reglen gælder til og med 768px */
    @media screen and (max-width: 768px) {
      header {
        padding-inline: 20px;
        text-align: start;
      }

      nav.active .menu a {
        text-align: start;
      }
      .logo img {
        width: 50px;
        height: auto;
      }
      li:last-child img {
        max-width: 40px;
        height: auto;
      }
    }
  }
</style>

<script>
  const burger = document.querySelector(".burger");
  const nav = document.querySelector("nav");
  const menu = document.querySelector(".menu");
  const links = document.querySelectorAll(".menu li a");

  burger.addEventListener("click", () => {
    burger.classList.toggle("active");
    nav.classList.toggle("active");
  });

  links.forEach((link) => {
    link.addEventListener("click", () => {
      burger.classList.remove("active");
      nav.classList.remove("active");
    });
  });
</script>
