---
import { Image } from "astro:assets";
import home2 from "../assets/home2.jpg";
import home3 from "../assets/home3.jpg";
import home4 from "../assets/home4.jpg";

import Tag from "./Tag.astro";
import ContactInfo from "./ContactInfo.astro";
---

<section class="container">
  <div class="del1">
    <div>
      <Tag style="secondary">Proccess</Tag>
      <h2>Contact Us. Itâ€™s Easy.</h2>
      <p>Leverage agile frameworks to provide a robust synopsis for high level overviews. Iterative approaches to corporate strategy foster collaborative.</p>
    </div>
    <div>
      <ContactInfo iconname="call-today" tekst="Call Today" h6="+1 800 100 900" />
      <ContactInfo iconname="monday-friday" tekst="Monday To Friday" h6="9AM - 5PM" />
      <ContactInfo iconname="adress-grey" tekst="USA Office" h6="195 Devonshire St Boston, MA 02110" />
    </div>
  </div>

  <div class="del2">
    <figure class="figure-version1">
      <div class="billede-grid">
        <Image alt="" src={home2} />
        <div>
          <Image alt="" src={home3} />
          <Image alt="" src={home4} />
        </div>
      </div>
    </figure>
  </div>
</section>

<style>
  @layer components {
    .container {
      grid-column: content;
      display: grid;
      grid-template-columns: auto auto;
      grid-template-rows: var(--layout-rows3);
      color: var(--color-primary3);
      gap: var(--space-m);
      padding: var(--space-2xl) 0;

      @media (max-width: 600px) {
        padding: var(--space-m) 0;
        display: flex;
        flex-direction: column;
      }
    }
    .del1 {
      grid-row: 1 / -1;
      > div:first-child {
        display: flex;
        flex-direction: column;
        margin-bottom: var(--space-m-l);
      }
      > div:last-child {
        display: flex;
        flex-direction: column;
        gap: var(--space-l-xl);
      }
    }

    .del2 {
      display: grid;
      align-items: center;
      grid-row: 2 / -1;
    }
    .billede-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;

      :last-child {
        display: flex;
        flex-direction: column;
        gap: 20px;
      }
    }
  }
</style>
