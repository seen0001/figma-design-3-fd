---
const { surface = "team", tag, headline } = Astro.props;

import team1 from "../assets/team1.avif";
import about1 from "../assets/about1.avif";
import case1 from "../assets/case1.avif";

const backgroundImages = {
  team: team1,
  about: about1,
  case: case1,
};
---

<section data-surface={surface} class="container full" style={`--background-image: url(${backgroundImages[surface]});`}>
  <div class="content">
    <div class="content-background">
      <div class="tag">
        <p>{tag}</p>
      </div>
      <h1>{headline}</h1>
    </div>
  </div>
</section>

<style>
  @layer components {
    .full {
      display: grid;
      grid-template-columns: subgrid;
      grid-column: full;

      > * {
        grid-column: content;
      }
    }

    .container {
      background-image: var(--background-image);
      background-size: cover;
      background-repeat: no-repeat;
      padding: 9rem 0;

      .content-background {
        border-radius: 29px;
        background: rgba(255, 255, 255, 0.85);
        color: var(--color-primary3);
        display: inline-block;
        padding: 3rem 3.75rem;
        max-width: 790px;

        .tag {
          padding: 0px 15px;
          background: var(--color-primary1);
          display: inline-block;
          border-radius: 20px;
        }
      }
    }
  }
</style>
